  <div id="banner">
  	<div id="banner-L">
      <span class="website-title">
    <%= link_to "The Great War", root_path, id: "logo" %>
      </span>
    	</div>
      <div id="banner-R"></div>
      <div class="clearB"></div>
      <div id="banner-Hnav">
      <ul class="nav">
        <li><%= link_to "Home", root_path %></li>
        <!-- Display Users and dropdown menu if the user is logged in,
