<% provide(:title, @gama.name) %>

<div id="col-M">
  <div class="main-box">
    <div class="main-top"></div>
    <div class="main-filler">
      
      <div class="main-info">
	<p>
	  <% if @gama.pending? %>
	  <strong>Game <%= @gama.name %> is Pending. Would you like to
	    <%= link_to 'join?', '#' %></strong> 
	  <% else %>

	  <% if @gama.done? %>
	  <strong>Game <%= @gama.name %> is Over.</strong> 
	  <% else %>
	  <strong> Game <%= @gama.name %> is on-going.</strong>
	  <% end %>
	  <% end %>

	  
	</p>

	<p>
	  <% if current_user.is_host?(@gama) %>
	  <% if @gama.full? %>
	  <h1> The game is ready to start. Press below to start the game </h1>
	  <%= button_to 'Start Game', @gama.start %>
	  <% else %>
	  <h1> The game is not yet full. Please wait until more people join. </h1>
	  <% end %>
	  
	  <% end %>


	  
	</p>


	<%= link_to 'Leave Your Current Game', gamas_path(:leave => 1) %> |
	<%= link_to 'Back', gamas_path %>
      </div>
    </div>
    <div class="main-footer"></div>
  </div>
  <div class="clearB" style="height:20px"></div>
</div>
